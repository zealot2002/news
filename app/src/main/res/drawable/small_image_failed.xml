<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!-- 实心 -->
            <solid android:color="#0fffffff"/>
            <!-- 描边 -->
            <stroke
                android:width="2px"
                android:color="#1affffff" />
            <!-- 圆角 -->
            <corners
                android:radius="8px" />
        </shape>
    </item>
    <item>
        <bitmap android:gravity="center" android:src="@mipmap/error_image" />
    </item>
</layer-list>